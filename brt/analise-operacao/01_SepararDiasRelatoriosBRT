novo <- c("10: Alvorada / Santa Cruz", "10: Santa Cruz / Alvorada", "LECD33: Campo Grande / Santa Cruz", "42A: GaleÃ£o / Madureira", "42E: GaleÃ£o / Santa EfigÃªnia", "LECD33: Santa Cruz / Campo Grande", "12: Pingo d'Ãgua / Alvorada", "11N: Santa Cruz / Alvorada", "11N: Alvorada / Santa Cruz", "51A: Vila Militar / Terminal Alvorada", "12: Alvorada / Pingo d'Ãgua", "51A:  Terminal Alvorada / Vila Militar", "51: Terminal Recreio / Vila Militar", "51: Vila Militar / Terminal Recreio", "38A: GaleÃ£o / Alvorada", "38A: Alvorada / GaleÃ£o", "27: Mato Alto: Salvador Allende", "25A:  Mato Alto /  Alvorada", "25A:  Alvorada / Mato Alto", "35: Madureira / Alvorada", "35: Alvorada  /  Madureira", "22: Alvorada / Jardim OceÃ¢nico", "22: Jardim OceÃ¢nico/ Alvorada", "42A: Madureira / GaleÃ£o", "19: Pingo d'Ãgua / Salvador Allende", "46: Alvorada / Penha", "46: Penha / Alvorada", "53A: Sulacap / Alvorada", "53A: Alvorada / Sulacap", "40A: Alvorada / Madureira", "40A: Madureira / Alvorada", "38N: FundÃ£o / Alvorada", "15: Recreio Shopping / Pingo d'Ãgua", "14: Campo Grande / Salvador Allende", "14: Salvador Allende / Campo Grande", "50: JardimOceÃ¢nico/ Terminal OlÃ­mpico", "50: Terminal OlÃ­mpico/ JardimOceÃ¢nico", "20: Santa Cruz / Salvador Allende", "20: Salvador Allende / Santa Cruz", "13: Mato Alto / Alvorada", "13: Alvorada /  Mato Alto", "53B: Jardim OceÃ¢nico / Sulacap", "53B: Sulacap / Jardim OceÃ¢nico", "29: Salvador Allende /  Jardim OceÃ¢nico", "29:  Jardim OceÃ¢nico/ Salvador Allende", "41: Recreio / Terminal Madureira", "41: Terminal Madureira / Recreio", "35A:  Jardim OceÃ¢nico/ Madureira", "35A: Madureira / Jardim OceÃ¢nico", "18: Recreio Shopping / Jardim OceÃ¢nico", "15: Pingo d'Ãgua / Recreio Shopping", "19: Salvador Allende / Pingo d'Ãgua", "18: Jardim OceÃ¢nico/ Recreio Shopping", "27: Salvador Allende / Mato Alto", "31A: Alvorada / Vicente de Carvalho", "31A: Vicente de Carvalho / Alvorada", "47:  Santa EfigÃªnia/ Madureira", "37: Alvorada / Tanque")

### Transforma os dados em data frame, remove espaÃ§os e pontuaÃ§Ãµes, substitui a redaÃ§Ã£o
### original pelo texto formatado. NÃ£o mexer.
dados <- as.data.frame(dados)

dados$Trajeto <- gsub("[[:space:]]", "", dados$Trajeto)
dados$Trajeto <- gsub("[[:punct:]]", "", dados$Trajeto)
substituicao <- data.frame(from = original, to = novo)
substituicao$from <- gsub("[[:space:]]", "", substituicao$from)
substituicao$from <- gsub("[[:punct:]]", "", substituicao$from)

dados <- FindReplace(data = dados, Var = "Trajeto", replaceData = substituicao,
                       from = "from", to = "to", exact = FALSE)

### Recorta os dados por dia e os grava na pasta.

while (dia1 <= dia2){
  ano <- as.character(dia1, format = "%Y")
  mes <- as.character(dia1, format = "%m")
  day <- as.character(dia1, format = "%d")
  Recortado <- dados[as.character(dados$Data, format="%Y-%m-%d")==as.character(dia1),]
  end_xls <- paste0(pasta, ano,"/",mes,"/",day,".xlsx")
  write.xlsx(Recortado,end_xls) 
  dia1 <- dia1 + days(1)
}
